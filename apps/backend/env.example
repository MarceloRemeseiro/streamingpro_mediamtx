# Variables de entorno para desarrollo local
# Copia este archivo como .env y ajusta los valores según tu entorno

# Base de datos PostgreSQL
DATABASE_URL="postgresql://streaming_user:streaming_pass@localhost:5432/streaming_db?schema=public"

# Configuración del servidor MediaMTX
MEDIAMTX_HOST=localhost
MEDIAMTX_API_PORT=9997
MEDIAMTX_RTMP_PORT=1935
MEDIAMTX_SRT_PORT=8890
MEDIAMTX_HLS_PORT=8888

# Autenticación API MediaMTX
MEDIAMTX_API_USER=admin
MEDIAMTX_API_PASS=admin123

# URLs públicas para clientes (desarrollo local)
PUBLIC_RTMP_HOST=localhost
PUBLIC_SRT_HOST=localhost
PUBLIC_HLS_HOST=localhost

# Configuración para producción (ejemplos)
# PUBLIC_RTMP_HOST=streaming.tudominio.com
# PUBLIC_SRT_HOST=streaming.tudominio.com
# PUBLIC_HLS_HOST=streaming.tudominio.com

# Configuración JWT (opcional para autenticación futura)
# JWT_SECRET=tu_secreto_jwt_muy_seguro_aqui
# JWT_EXPIRES_IN=24h

# Configuración de logging
NODE_ENV=development
LOG_LEVEL=info 