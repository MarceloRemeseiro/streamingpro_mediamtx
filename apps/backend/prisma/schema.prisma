generator client {
  provider      = "prisma-client-js"
  output        = "../src/prisma/generated/client"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id                 String              @id @default(cuid())
  email              String              @unique
  password           String
  rol                RolUsuario          @default(TECNICO)
  secreto2FA         String?
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  registrosAuditoria RegistroAuditoria[]
}

model EntradaStream {
  id            String          @id @default(cuid())
  nombre        String
  protocolo     ProtocoloStream
  puertoSRT     Int?
  latenciaSRT   Int?            @default(200)
  passphraseSRT String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  streamId      String?
  streamKey     String?         @unique
  url           String
  salidas       SalidaStream[]
}

model SalidaStream {
  id              String          @id @default(cuid())
  nombre          String
  habilitada      Boolean         @default(false)
  entradaId       String
  urlDestino      String?
  passphraseSRT   String?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  claveStreamRTMP String?
  latenciaSRT     Int?            @default(120)
  playlistLength  Int?            @default(5)
  protocolo       ProtocoloSalida
  puertoSRT       Int?
  segmentDuration Int?            @default(6)
  streamIdSRT     String?
  entrada         EntradaStream   @relation(fields: [entradaId], references: [id], onDelete: Cascade)
}

model RegistroAuditoria {
  id        String   @id @default(cuid())
  accion    String
  detalles  Json?
  usuarioId String
  createdAt DateTime @default(now())
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
}

enum RolUsuario {
  ADMIN
  TECNICO
  VISOR
}

enum ProtocoloStream {
  RTMP
  SRT
}

enum ProtocoloSalida {
  RTMP
  SRT
  HLS
  RTMPS
}
